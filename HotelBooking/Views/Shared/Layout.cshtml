<script>
    // Lưu trạng thái của liên kết đã chọn
    const links = document.querySelectorAll('.nav-link');
    const activeMenu = localStorage.getItem('activeMenu');

    // Nếu có activeMenu, thiết lập class active cho liên kết tương ứng
    if (activeMenu) {
        const activeLink = document.querySelector(`[data-menu="${activeMenu}"]`);
        if (activeLink) {
            activeLink.classList.add('active');
        }
    }

    links.forEach((link) => {
        link.addEventListener('click', (e) => {
            // Xóa class active từ tất cả các liên kết
            links.forEach((link) => link.classList.remove('active'));

            // Thêm class active cho liên kết đang được nhấp
            link.classList.add('active');

            // Lưu menu đã chọn vào localStorage
            const menu = link.getAttribute('data-menu');
            localStorage.setItem('activeMenu', menu);
        });
    });
</script>